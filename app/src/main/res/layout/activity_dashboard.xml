        android:layout_height="wrap_content"
        android:text="@string/bluetooth_dashboard_v1_0"
        android:textColor="@android:color/darker_gray"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"/>
</LinearLayout>